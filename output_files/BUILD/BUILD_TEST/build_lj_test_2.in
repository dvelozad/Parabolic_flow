# Initialization
units       lj
dimension   3
boundary    p p p
atom_style  atomic

lattice     fcc 0.2
region          box block -10 10 -10 10 -10 10
create_box	    2 box
create_atoms	1 box


# Define FCC lattice for walls
region      1 block -8 8 -8 8 -8 8 units lattice
group	    flow region 1
group	     boundary subtract all flow

mass        1 1.0

# Define harmonic interaction with specified spring constant and cutoff
pair_style harmonic/cut
pair_coeff * * 10 1 2.1  # Adjusted for simplicity

# Initialize velocities (optional, could start from rest or specify manually)
velocity    all set 0.0 0.0 0.0

fix         1 all nve  # Integrate the equations of motion

# Output settings
dump        trj all custom 1 dump.harmonic.lammpstrj id type element x y z
thermo      5
thermo_style custom step temp pe etotal

run         1


#fix freezeWall wall setforce 0.0 0.0 0.0
