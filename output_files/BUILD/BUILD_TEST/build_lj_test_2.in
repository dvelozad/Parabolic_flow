# Initialization
units       lj
dimension   3
boundary    p p p
atom_style  atomic

lattice         fcc 0.9
region          box block -15 15 -8 8 -8 8 units lattice
create_box	    2 box

region          particles block -13 13 -6 6 -6 6 units lattice
create_atoms	1 region particles

# Define FCC lattice for walls
region      1 block -7.5 7.5 -2.5 2.5 -2.5 2.5 units lattice
group	    flow region 1
group	    boundary subtract all flow
set         group boundary type 2

mass        1 1.0
mass        2 1.0

# Pair styles for non-bonded interactions
pair_style   hybrid/overlay lj/cut 2.5 harmonic/cut
pair_modify shift yes
pair_coeff   1 1 lj/cut 1 1 2.5                 # s-s interactions
pair_coeff   1 2 lj/cut 1 1 1.122462048309373   # s-w interactions using WCA potential
pair_coeff   2 2 harmonic/cut 1000 1.1626 2.5   # w-w 

# Initialize velocities (optional, could start from rest or specify manually)
velocity    all set 0.0 0.0 0.0

fix         1 all nve  # Integrate the equations of motion

# Output settings
dump        trj all custom 10 dump.harmonic.lammpstrj id type element x y z
thermo      5
thermo_style custom step temp pe etotal

timestep 0.001

#fix freezeWall boundary setforce 0.0 0.0 0.0

minimize 1.0e-4 1.0e-6 100 1000

run         500

